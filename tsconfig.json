{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module":"commonjs",
    "lib": ["es2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/bin",
    "src/lib",
  ],
  "exclude": [
    "node_modules", "dist", "example"
  ]
}
